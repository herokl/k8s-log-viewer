<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.longfor.lmk.k8slogviewer.controller.SettingsController">

    <content>
        <VBox spacing="15" padding="20">
            <Label text="配置设置" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <!-- Git Bash 路径 -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Git Bash 路径：" minWidth="120"/>
                <TextField fx:id="gitBashPathField" HBox.hgrow="ALWAYS"/>
                <Button text="选择" onAction="#onBrowseGitBash"/>
            </HBox>

            <!-- Kubeconfig 路径 -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Kubeconfig 路径：" minWidth="120"/>
                <TextField fx:id="kubeConfigPathField" HBox.hgrow="ALWAYS"/>
                <Button text="选择" onAction="#onBrowseKubeconfig"/>
            </HBox>
        </VBox>
    </content>

    <buttonTypes>
        <ButtonType text="保存" buttonData="OK_DONE"/>
        <ButtonType text="取消" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>

</DialogPane>
