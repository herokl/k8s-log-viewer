<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" alignment="CENTER" fx:controller="com.longfor.lmk.k8slogviewer.controller.SettingsController" xmlns:fx="http://javafx.com/fxml">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <!-- 标题 -->
    <Label text="Kubernetes 配置" styleClass="title-label"/>

    <!-- kubeconfig 文件选择 -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="kubeconfig 文件路径:" styleClass="label"/>
        <TextField fx:id="kubeconfigPathField" promptText="输入或选择 kubeconfig 文件路径" prefWidth="400"/>
        <Button fx:id="browseButton" text="浏览" styleClass="browse-button" onAction="#browseKubeconfig"/>
    </HBox>

    <!-- 确认和取消按钮 -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="saveButton" text="保存" styleClass="save-button" onAction="#saveSettings"/>
        <Button fx:id="cancelButton" text="取消" styleClass="cancel-button" onAction="#cancel"/>
    </HBox>
</VBox>